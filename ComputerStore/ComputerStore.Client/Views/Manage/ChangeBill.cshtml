@model ComputerStore.Client.Models.ApplicationUser
@{
    ViewBag.Title = "Számlázási adatok módosítása";
}

@*<h2>@ViewBag.Title.</h2>*@

@using (Html.BeginForm("ChangeBillGet", "Manage", System.Web.Mvc.FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    var user=ComputerStore.Client.Utils.SessionData.Instance.CurrentUser;
    @Html.AntiForgeryToken()
    <h4>Számlázási adatok módosítása</h4>
    <hr />

    <div class="form-group">
        <div class="row">
            @Html.Label("Név:", new { @class = "col-md-1 pull-left" })
            <input type="text" value="@user.BillName" class="col-md-3 col-md-offset-1" name="name" />
        </div>
        <div class="row">
            @Html.Label("Ország:", new { @class = "col-md-1 pull-left" })
            <input type="text" value="@user.BillCountry" class="col-md-3 col-md-offset-1" name="country" />
        </div>
        <div class="row">
            @Html.Label("Irányítószám:", new { @class = "col-md-1 pull-left" })
            <input type="text" value="@user.BillIr" class="col-md-3 col-md-offset-1" name="ir" />
        </div>
        <div class="row">
            @Html.Label("Város:", new { @class = "col-md-1 pull-left" })
            <input type="text" value="@user.BillCity" class="col-md-3 col-md-offset-1" name="city" />
        </div>
        <div class="row">
             @Html.Label("Utca, házszám:", new { @class = "col-md-2 pull-left" })
            <input type="text" value="@user.BillStreet" class="col-md-3" name="street" />
        </div>

        </div>

   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Módosítások mentése" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}