@model ComputerStore.Client.Models.ApplicationUser
@{
    ViewBag.Title = "Szállítási adatok módosítása";
}

@*<h2>@ViewBag.Title.</h2>*@

@using (Html.BeginForm("ChangeTransportGet", "Manage", System.Web.Mvc.FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    var user = ComputerStore.Client.Utils.SessionData.Instance.CurrentUser;
    @Html.AntiForgeryToken()
    <h2>Szállítási adatok módosítása</h2>
    <hr style="margin-bottom: 50px;"/>

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Név:", new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                <input type="text" value="@user.TransportName" class="form-control" name="name" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Ország:", new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                <input type="text" value="@user.TransportCountry" class="form-control" name="country" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Irányítószám:", new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                <input type="text" value="@user.TransportIr" class="form-control" name="ir" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Város:", new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                <input type="text" value="@user.TransportCity" class="form-control" name="city" />
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Utca, házszám:", new { @class = "col-md-2 control-label" })
            <div class="col-md-5">
                <input type="text" value="@user.TransportStreet" class="form-control" name="street" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Módosítások mentése" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}