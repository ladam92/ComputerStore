@model ComputerStore.Client.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

@*<h2>@ViewBag.Title.</h2>*@

@*<p class="text-success">@ViewBag.StatusMessage</p>*@
<div>
    <div class="col-md-4 col-md-offset-4">
            
            @if (Model.HasPassword)
            {

                <div class="list-group" style="text-align: center;">
                    @Html.ActionLink("Profil adatok szerkesztése", "ChangeProfil", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
                    @Html.ActionLink("Jelszó módosítása", "ChangePassword", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
                    @Html.ActionLink("Számlázási adatok módosítása", "ChangeBill", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
                    @Html.ActionLink("Szállítási adatok módosítása", "ChangeTransport", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
                </div>
            }
            else
            {
                <div class="list-group" style="text-align: center;">
                    @Html.ActionLink("Create", "SetPassword", routeValues: null, htmlAttributes: new { @class = "list-group-item" })
                </div>
                }
            </div>

        @*<dt>External Logins:</dt>
