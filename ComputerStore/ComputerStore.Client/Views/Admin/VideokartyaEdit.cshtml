@model ComputerStore.Client.Models.VideokartyaViewModel

@{
    ViewBag.Title = "Termék";
}


@using (Html.BeginForm("VideokartyaEditSave", "Admin", System.Web.Mvc.FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2>Termék módosítása</h2>
    <hr style="margin-bottom: 50px;" />

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Megnevezés:", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                <input type="text" value="@Model.Megnevezes" class="form-control" name="megnev" />
            </div>
        </div>

        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.Label("Nettó Ár:", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                <input type="number" min="0" value="@Model.NettoAr" class="form-control" name="ar" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Raktáron:", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                <input type="number" min="0" value="@Model.Db" class="form-control" name="db" />
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Méret(GB):", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                <input type="number" min="0" value="@Model.MemoriaMeret" class="form-control" name="meret" />
            </div>
        </div>

        <div class="form-group ">
            @Html.Label("Alkatrész gyártó:", new { @class = "col-md-2 control-label" })
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.Gyarto, Model.AlkatreszGyarto, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group ">
            @Html.Label("Memória típus:", new { @class = "col-md-2 control-label" })
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.MemoriaTipusID, Model.MemoriaTipusList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group ">
            @Html.Label("Monitor csatolo típus:", new { @class = "col-md-2 control-label" })
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.MonitorCsatoloID, Model.MonitorCsatoloList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Monitor csatolo darabszám:", new { @class = "col-md-2 control-label" })
            <div class="col-md-4">
                <input type="number" min="0" value="@Model.Csatolodb" class="form-control" name="mondb" />
            </div>
        </div>


                <div class="form-group form-button-submit">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Mentés" class="btn btn-primary" />
                    </div>
                </div>
            </div>
}
@section Scripts {
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}
