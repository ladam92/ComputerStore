@model List<ComputerStore.DTO.Types.Fokategoriatipus>

    <div class="col-md-9">

        <table class="table table-hover table-bordered centerText" style="cursor: pointer">
            @foreach (var item in Model)
            {
                <tr>

                    <td><img height="100" src="@String.Concat("data:image/jpeg;base64,", Convert.ToBase64String(item.Kep))" alt=""></td>
                    <td>
                        <p>@item.Megnevezes</p>
                    </td>
                    @*<td>
                            <p>@item.Tipus</p>
                        </td>*@
                    @if(item.Tipus=="Alaplap"){
                    <td>
                        @Html.ActionLink("Módosítás", "AlaplapEdit", "Admin", new { id = item.ID}, "")
                    </td>
                    }
                    else if (item.Tipus == "Billentyuzet")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "BillenytuzetEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Processzor")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "CPUEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Eger")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "EgerEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Hattertar")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "HattertarEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Memoria")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "MemoriaEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Monitor")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "MonitorEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Szamitogephaz")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "SzamitogephazEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Tapegyseg")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "TapegysegEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else if (item.Tipus == "Videokartya")
                    {
                        <td>
                            @Html.ActionLink("Módosítás", "VideokartyaEdit", "Admin", new { id = item.ID }, "")
                        </td>
                    }
                    else
                    {
                        <td> </td>
                    }
                </tr>
            }
        </table>

    </div>
