@model ComputerStore.Client.Models.CreateCategoryViewModel

@{
    ViewBag.Title = "CreateCategory";
}

<h2>Kategória létrehozása</h2>
<hr style="margin-bottom: 50px;"/>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Megnevezes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Megnevezes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Megnevezes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Tipus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.DropDownList("Tipus", EnumHelper.GetSelectList(typeof(ComputerStore.DTO.Enums.Kategoriak)), new { @class = "form-control", @id = "dropDownList" })
                    @Html.ValidationMessageFor(model => model.Tipus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-button-submit">
                <div class="col-md-offset-5 col-md-2">
                    <input type="submit" value="Létrehozás" class="btn btn-primary col-md-12" />
                </div>
            </div>
        </div>
    </div>
}
